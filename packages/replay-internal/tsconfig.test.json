{
  "extends": "./tsconfig.json",

  "include": ["test/**/*.ts", "vitest.config.ts", "test/vitest-custom-matchers.d.ts"],

  "compilerOptions": {
    "types": ["node"],
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
