{
  "$schema": "../../node_modules/oxlint/configuration_schema.json",
  "extends": ["../../.oxlintrc.json"],
  "ignorePatterns": ["examples/worker.js"],
  "overrides": [
    {
      "files": ["src/**/*.ts"],
      "rules": {
        "prefer-template": "off"
      }
    },
    {
      "files": ["*.mjs"],
      "rules": {
        "import/named": "off",
        "import/default": "off",
        "import/no-named-as-default": "off",
        "import/no-named-as-default-member": "off"
      }
    }
  ]
}
