{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",

    /* Preact Config */
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
