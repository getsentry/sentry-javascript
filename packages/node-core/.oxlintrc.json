{
  "$schema": "../../node_modules/oxlint/configuration_schema.json",
  "extends": ["../../.oxlintrc.json"],
  "env": {
    "node": true
  },
  "rules": {
    "sdk/no-unsafe-random-apis": "error"
  },
  "overrides": [
    {
      "files": ["**/src/**"],
      "rules": {
        "sdk/no-class-field-initializers": "off"
      }
    },
    {
      "files": ["test/**/*.ts", "test/**/*.tsx"],
      "rules": {
        "sdk/no-unsafe-random-apis": "off"
      }
    }
  ]
}
