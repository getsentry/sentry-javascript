{
  "extends": "./tsconfig.json",

  "include": ["test/**/*"],

  "compilerOptions": {
    // should include all types from `./tsconfig.json` plus types for all test frameworks used
    "types": ["node", "jest"],

    // other package-specific, test-specific options

    // Needed to parse ESM from gatsby js files
    "allowJs": true
  }
}
