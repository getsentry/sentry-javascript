{
  "name": "@sentry/replay",
  "version": "0.2.0-7",
  "description": "User replays for Sentry",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "scripts": {
    "bootstrap": "yarn && cd demo && yarn",
    "build": "NODE_ENV=production yarn rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "clean": "yarn rimraf dist",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "prepare": "husky install",
    "prepublishOnly": "yarn build",
    "start:demo": "yarn build && cd demo && yarn start",
    "test": "yarn jest",
    "watch": "NODE_ENV=development yarn build --watch"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getsentry/sentry-replay.git"
  },
  "author": "Sentry",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/getsentry/sentry-replay/issues"
  },
  "homepage": "https://github.com/getsentry/sentry-replay#readme",
  "peerDependencies": {
    "@sentry/browser": ">=6.0.0",
    "@sentry/tracing": ">=6.0.0",
    "@sentry/utils": ">=6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "@sentry/browser": "^6.19.1",
    "@sentry/tracing": "^6.19.1",
    "@sentry/types": "^6.19.1",
    "@sentry/utils": "^6.19.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": ">=6",
    "jest": "^27.5.1",
    "lint-staged": ">=10",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "rrweb": "^1.1.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "volta": {
    "node": "14.19.0",
    "yarn": "1.22.17"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn eslint --cache --fix"
  }
}
